{% extends "base.jinja" %}

{% block "content" %}
<section class="section">
    <div class="box">
        <h1>Register</h1>
        <form action="/register/" method="post" class="form">
            {% csrf_token %}
            <div class="field">
                <div class="label">Username</div>
                <div class="control"><input class="input" type="text" name="username" id="username"></div>
            </div>
            <div class="field">
                <div class="label">Password</div>
                <div class="control"><input class="input" type="password" name="password" id="password"></div>
            </div>
            <div class="field">
                <div class="label">Confirm Password</div>
                <div class="control"><input class="input" type="password" name="passwordConfirmation" id="passwordConfirmation"></div>
            </div>

            <input type="submit" class="button is-primary" />
        </form>
    </div>
    <p>Does not have an account? Click <a href="/register/">here</a> to create one.</p>
</section>
{% endblock %}